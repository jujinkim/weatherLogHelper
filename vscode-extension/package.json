{
  "name": "weather-log-helper",
  "displayName": "Weather Log Helper",
  "description": "Internal WLH client",
  "version": "0.0.1",
  "publisher": "jujin.kim",
  "author": "jujin.kim",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/jujinkim/weatherLogHelper.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:wlh.scanFastThenFull",
    "onView:wlh.sidebar",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "wlh.scanFastThenFull",
        "title": "WLH: Scan (Fast then Full)"
      },
      {
        "command": "wlh.decryptCurrentFile",
        "title": "WLH: Decrypt Current File"
      },
      {
        "command": "wlh.openSettings",
        "title": "WLH: Open Settings"
      },
      {
        "command": "wlh.status",
        "title": "WLH: Engine Status"
      },
      {
        "command": "wlh.start",
        "title": "WLH: Engine Start"
      },
      {
        "command": "wlh.restart",
        "title": "WLH: Engine Restart"
      },
      {
        "command": "wlh.stop",
        "title": "WLH: Engine Stop"
      },
      {
        "command": "wlh.runEngineDirect",
        "title": "WLH: Run Engine Direct"
      },
      {
        "command": "wlh.openHome",
        "title": "WLH: Open WLH Home Folder"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "wlh.sidebar",
          "name": "WLH"
        }
      ]
    },
    "configuration": {
      "title": "Weather Log Helper",
      "properties": {
        "wlh.update.baseUrl": {
          "type": "string",
          "default": "",
          "description": "Base URL for WLH engine updates"
        },
        "wlh.decrypt.jarPath": {
          "type": "string",
          "default": "",
          "description": "Path to decrypt jar"
        },
        "wlh.commandPath": {
          "type": "string",
          "default": "",
          "description": "Path to the wlh executable"
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.4.5"
  }
}
